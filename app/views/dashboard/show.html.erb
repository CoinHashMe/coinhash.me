<% content_for(:title, 'Dashboard') %>
<div class="content container">
  <div class="alert alert-info col-md-6">dogecoin pool reopening March 10th!</div>
  A very special annoucement from ChunkPools, contests and rewards programs start now: https://chunkypools.com/posts/#post-0 
  <div class="row">
    <div class="col-md-12">
      <h2 class="page-title">Dashboard <small>Statistics and more</small></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= render 'graph' %>
      <%= render 'sparklines' %>
    </div>
    <div class="col-md-4">
      <%= render 'pools' %>
    </div>
  </div>
</div>

<script>
window.pool_info = <%= @pool_info.to_json.html_safe %>;
window.results = <%= @results.to_json.html_safe %>;
window.sparklines = <%= @sparklines.to_json.html_safe %>;
window.sparkline_order = <%= @sparkline_order.to_json.html_safe %>;
</script>
