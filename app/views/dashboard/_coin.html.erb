<%= link_to(coin) do %>
  <li>
    <%= coin_image(coin, alt: coin, class: 'pull-left img-circle') %>
    <div class="news-item-info">
      <div class="name"><%= coin_full_name(coin).capitalize %></div>
      <div class="position">us-east.chunkypools.com:<%= port %></div>
      <div class="time">Last block: <%= "%sh %sm " % pool.time_since_last_block %></div>
    </div>
  </li>
<% end %>
